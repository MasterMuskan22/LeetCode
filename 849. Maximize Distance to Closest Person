#define speed ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
class Solution {
public:
    int maxDistToClosest(vector<int>& seats) {
        int n=sz(seats);
        vi pref(n,0);
        vi suff(n,0);
        int x=n-1;
        rep(i,0,sz(seats)){
            if(seats[i]==0){
                pref[i]=x;
                x++;
            }
            else{
                pref[i]=0;
                x=1;
            }
        }
        x=n-1;
        for(int i=sz(seats)-1;i>=0;i--){
            if(seats[i]==0){
                suff[i]=x;
                x++;
            }
            else{
                suff[i]=0;
                x=1;
            }
        }
        int max_dist=0;
        rep(i,0,n){
            int mini=min(pref[i],suff[i]);
            max_dist=max(max_dist,mini);
        }
        rt(max_dist);
    }
};
