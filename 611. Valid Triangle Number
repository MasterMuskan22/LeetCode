class Solution {
public:
    int triangleNumber(vector<int>& nums) {
        srt(nums);
        int cnt=0;
        if(sz(nums)<=2) rt(0);
        int n=sz(nums);
        rep(i,0,n){
            rep(j,i+1,n){
                int sum=nums[i]+nums[j];
                int start=j+1,end=n-1;
                while(start<=end){
                    int mid=start+(end-start)/2;
                    if(nums[mid]<sum) start=mid+1;
                    else end=mid-1;
                }
                // cout<<start<<" ";
                cnt+=end-j;
            }
        }
        rt(cnt);
    }
};
