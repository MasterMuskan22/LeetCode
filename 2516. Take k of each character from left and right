int dc1[8]={0,1,1,1,0,-1,-1,-1};
int mod=1e9+7;
#define speed ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
class Solution {
public:
    int takeCharacters(string s, int k) {
        unordered_map<char,int> mp;
        for(auto it:s){
            mp[it]++;
        }
        if(mp['a']<k || mp['b']<k || mp['c']<k) rt(-1);
        int min_mins=1e9;
        int n=sz(s);
        int i=n-1,j=n-1;
        while(i>=0){
            mp[s[i]]--;
            while(mp[s[i]]<k) mp[s[j]]++,j--;
            i--;
            min_mins=min(min_mins,i+n-j);
        }
        rt(min_mins);
    }
};
