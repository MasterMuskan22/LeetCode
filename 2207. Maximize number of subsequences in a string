class Solution {
public:
    ll getMaxNum(string s,string t){
        ll first=0,second=0;
        ll cnt=0;
        for(auto it:s){
            if(it==t[1]) cnt+=first;
            if(it==t[0]) first++;
        }
        rt(cnt);
    }
    long long maximumSubsequenceCount(string text, string pattern) {
        ll res1=getMaxNum(pattern[0]+text,pattern);
        ll res2=getMaxNum(text+pattern[1],pattern);
        return max(res1,res2);
    }
};
