class Solution {
public:
    bool closeStrings(string word1, string word2) {
        vi mp1(26,0),mp2(26,0),mp3(26,0),mp4(26,0);
        for(auto it:word1){
            mp1[it-'a']++;
            mp3[it-'a']=1;
        }
        for(auto it:word2){
            mp2[it-'a']++;
            mp4[it-'a']=1;
        }
        srt(mp1);
        srt(mp2);
        rt(mp1==mp2 && mp3==mp4);
    }
};
