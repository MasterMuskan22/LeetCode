class Solution {
public:
    int minCost(string colors, vector<int>& neededTime) {
        int min_cost=0;
        int i=0,j=0;
        int cur_max=0;
        int cur=0;
        while(j<sz(colors)){
            while(colors[j]==colors[i]){
                cur+=neededTime[j];
                cur_max=max(cur_max,neededTime[j]);
                j++;
            }
            i=j;
            min_cost+=(cur-cur_max);
            cur=0;
            cur_max=0;
        }
        min_cost+=(cur-cur_max);
        rt(min_cost);
    }
};
