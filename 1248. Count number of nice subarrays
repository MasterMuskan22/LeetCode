#define speed ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
class Solution {
public:
    int numberOfSubarrays(vector<int>& nums, int k) {
        umap mp;
        for(auto &it:nums){
            if(it&1) it=1;
            else it=0;
        }
        mp[0]=1;
        int num_subs=0;
        int sum=0;
        rep(i,0,sz(nums)){
            sum+=nums[i];
            if(mp.find(sum-k)!=mp.end()) num_subs+=mp[sum-k];
            mp[sum]++;
        }
        rt(num_subs);
    }
};
