class Solution {
public:
    int minMoves2(vector<int>& nums) {
        srt(nums);
        int n=sz(nums);
        int mid;
        if(n&1) mid=nums[n/2];
        else mid=(nums[n/2-1]+nums[n/2])/2;
        int min_moves=0;
        for(auto it:nums){
            min_moves+=abs(it-mid);
        }
        rt(min_moves);
    }
};
