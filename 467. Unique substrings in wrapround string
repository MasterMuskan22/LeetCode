#define speed ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
class Solution {
public:
    int findSubstringInWraproundString(string s) {
        int num_subs=0;
        int i=0,j=1;
        unordered_map<char,int> dp;
        dp[s[0]]=1;
        int cur=1;
        while(j<sz(s)){
            if(s[j]-s[j-1]==1 || s[j]-s[j-1]==-25) cur++;
            else{
                cur=1;
            }
            dp[s[j]]=max(dp[s[j]],cur);
            j++;
        }
        for(auto it:dp) num_subs+=it.second;
        rt(num_subs);
    }
};
