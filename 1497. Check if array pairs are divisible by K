class Solution {
public:
    bool canArrange(vector<int>& arr, int k) {
        umap mp;
        for(auto it:arr) mp[((it%k)+k)%k]++;
        for(auto it:arr){
            int rem1=it%k;
            if(rem1==0){
                if(mp[rem1]&1) rt(0);
            }
            else{
                int rem2=(k-rem1);
                if(mp[rem1]!=mp[rem2]) rt(0);
            }
        }
        rt(1);
    }
};
