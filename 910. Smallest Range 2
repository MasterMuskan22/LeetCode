#define speed ios_base::sync_with_stdio(false); cin.tie(NULL); cout.precision(20);
class Solution {
public:
    int smallestRangeII(vector<int>& nums, int k) {
        int min_diff=1e9;
        int n=sz(nums);
        srt(nums);
        //Add k to start and subtract k from end
        int start=nums[0]+k,end=nums[n-1]-k;
        min_diff=nums[n-1]-nums[0];
        int i=0;
        //now add k to start and subtract k from next
        while(i<n-1){
            int maxi=max(end,nums[i]+k);
            int mini=min(start,nums[i+1]-k);
            min_diff=min(min_diff,maxi-mini);
            i++;
        }
        rt(min_diff);
    }
};
