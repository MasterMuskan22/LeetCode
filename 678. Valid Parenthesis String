#define speed ios_base::sync_with_stdio(false); cin.tie(NULL);
class Solution {
public:
    bool checkValidString(string s) {
        stack<char> st;
        stack<char> star;
        rep(i,0,sz(s)){
            if(s[i]=='(') st.push(i);
            else if(s[i]=='*') star.push(i);
            else{
                if(!st.empty()) st.pop();
                else if(!star.empty()) star.pop();
                else rt(0);
            }
        }
        while(!st.empty()){
            if(star.empty()) rt(0);
            if(st.top()>star.top()) rt(0);
            else{
                st.pop();
                star.pop();
            }
        }
        rt(1);
    }
};
