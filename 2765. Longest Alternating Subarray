#define speed ios_base::sync_with_stdio(false); cin.tie(NULL);
class Solution {
public:
    int alternatingSubarray(vector<int>& nums) {
        int maxi=-1;
        int temp=1e9;
        int i=0,j=1;
        while(j<sz(nums)){
            int diff=nums[j]-nums[j-1];
            if(diff!=-1*temp){
                if(diff==1){
                    temp=diff;
                    i=j-1;
                    maxi=max(maxi,j-i+1);
                }
                else temp=1e9;
            }
            else{
                temp=-1*temp;
                maxi=max(maxi,j-i+1);
            }
            j++;
        }
        return maxi==1e9?-1:maxi;
    }
};
